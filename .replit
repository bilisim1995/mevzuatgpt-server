modules = ["python-3.11", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["bash", "libxcrypt", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MevzuatGPT API Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Celery Worker"

[[workflows.workflow]]
name = "MevzuatGPT API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py server"
waitForPort = 5000

[[workflows.workflow]]
name = "Celery Worker"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "celery -A tasks.celery_app worker --loglevel=info --concurrency=1"

[workflows.workflow.metadata]
outputType = "console"

