# MevzuatGPT Environment Variables Template
# VPS sunucunuzda .env dosyası oluşturun ve bu değerleri girin

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Groq API
GROQ_API_KEY=your_groq_api_key_here
AI_PROVIDER=groq

# Supabase (Database & Auth)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Redis Cloud
REDIS_URL=redis://default:password@host:port

# Elasticsearch
ELASTICSEARCH_URL=https://elastic.mevzuatgpt.org
ELASTICSEARCH_USERNAME=your_username
ELASTICSEARCH_PASSWORD=your_password

# Bunny.net Storage
BUNNY_STORAGE_ZONE=your_storage_zone
BUNNY_STORAGE_PASSWORD=your_storage_password
BUNNY_CDN_URL=https://cdn.mevzuatgpt.org

# SMTP Email (Hostinger)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USER=info@mevzuatgpt.org
SMTP_PASSWORD=your_smtp_password_here
SMTP_SENDER=no-reply@mevzuatgpt.org

# SendGrid (Password Reset)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@mevzuatgpt.org

# iyzico Payment
IYZICO_API_KEY=your_iyzico_api_key
IYZICO_SECRET_KEY=your_iyzico_secret_key
IYZICO_BASE_URL=https://api.iyzipay.com

# Security
SECRET_KEY=your_secret_key_for_jwt_here

# Application
ENVIRONMENT=production
DEBUG=False
