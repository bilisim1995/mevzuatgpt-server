# Environment Configuration
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,*.mevzuatgpt.org
ALLOWED_ORIGINS=http://localhost:3000,https://mevzuatgpt.org,https://admin.mevzuatgpt.org

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/mevzuat_gpt
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Supabase Configuration (if using Supabase instead of direct PostgreSQL)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_MAX_TOKENS=4000

# Bunny.net Storage Configuration
BUNNY_STORAGE_API_KEY=your-bunnynet-storage-api-key
BUNNY_STORAGE_ZONE=your-storage-zone-name
BUNNY_STORAGE_REGION=de
BUNNY_STORAGE_ENDPOINT=https://your-storage-zone.b-cdn.net

# Redis & Celery Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_TYPES=pdf

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Vector Search Configuration
EMBEDDING_DIMENSION=3072  # text-embedding-3-large dimension
SEARCH_LIMIT=10
SIMILARITY_THRESHOLD=0.7

# Production specific settings (uncomment and configure for production)
# ENVIRONMENT=production
# DEBUG=false
# ALLOWED_HOSTS=api.mevzuatgpt.org
# ALLOWED_ORIGINS=https://mevzuatgpt.org,https://admin.mevzuatgpt.org

# SSL/TLS Settings (for production)
# SSL_REDIRECT=true
# SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Database Connection Pool (for high traffic)
# DATABASE_POOL_SIZE=20
# DATABASE_MAX_OVERFLOW=40

# Performance Settings
# WORKER_CONNECTIONS=1000
# WORKER_PROCESSES=4

# Monitoring & Analytics
# SENTRY_DSN=https://your-sentry-dsn
# ANALYTICS_ENABLED=true

# Email Configuration (for password reset, notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@mevzuatgpt.org

# External API Limits
# OPENAI_RATE_LIMIT_RPM=3000
# OPENAI_RATE_LIMIT_TPM=180000

# Cache Settings
# CACHE_TTL=3600
# CACHE_MAX_ENTRIES=10000

# Health Check Settings
# HEALTH_CHECK_ENABLED=true
# HEALTH_CHECK_INTERVAL=60
